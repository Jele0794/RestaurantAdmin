<%= form_for @ingredient do |f| %>
    <%= f.label :nombre %><br>
    <%= f.text_field :nombre %><br>
    <br>
    <%= f.label :descripcion %><br>
    <%= f.text_area :descripcion, class: "materialize-textarea" %><br>
    <br>
    <%= f.label :cantidad %><br>
    <%= f.text_field :cantidad %><br>
    <br>
    <%= f.label :unidad %><br>
    <%= f.text_field :unidad %><br>
    <%= f.submit "Guardar", class: "waves-effect waves-light btn right"%>
<% end %>
